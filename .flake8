[flake8]
max-line-length = 120
extend-ignore = E203,W503,E501,F401,F403,E402,F811
exclude =
    .git,
    __pycache__,
    venv,
    env,
    migrations,
    staticfiles,
    .venv,
    */settings/*
per-file-ignores =
    # Django settings files have wildcard imports and long lines
    */settings/*.py:F401,F403,E402,E501,E401
    # Test files can have long lines for readability
    */tests/*.py:E501
    # Admin files often have long lines and unused imports
    */admin.py:F401,E501
    # Models may have unused imports and long lines
    */models.py:F401,F811,E501
    # URLs may have unused imports
    */urls.py:F401
